<%- include('partials/header.ejs') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <!-- Post Content (Centered and White Text) -->
        <div class="col-12 col-md-8 p-4 bg-dark text-white rounded-3 shadow-sm">
            <h1 class="text-center mb-4"><%= title %></h1>
            <p class="fs-6 text-muted text-center"><%= new Date().toLocaleString() %></p>
            <p class="fs-5 text-center" style="font-family: 'Open Sans', sans-serif;">
                <%= content %>
            </p>
            <div class="d-flex justify-content-between mt-4">
                <!-- Edit Button -->
                <a href="/edit/<%= postId %>" class="btn btn-warning">Edit Post</a>
                <!-- Delete Button -->
                <form action="/delete" method="POST" style="display: inline;">
                    <input type="hidden" name="postId" value="<%= postId %>">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">Delete Post</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>

